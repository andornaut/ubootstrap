install_no_recommends gnome-disk-utility gnome-control-center lightdm gnome-screensaver

package="atom"
url="https://atom.io/download/deb"
install_dpkg_wget "${package}" "${url}"

package=google-chrome
url="https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb"
install_dpkg_wget "${package}" "${url}"

# Solaar is a Linux device manager for Logitechâ€™s Unifying Receiver peripherals.
